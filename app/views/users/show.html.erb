<h1 class="text-center pt-4 pb-4">Welcome <%= @user.name %></h1>
<div class="container">
  <section class="user-events">
    <section>
      <h2 class="text-center">Created events</h2>
      <%= render 'shared/events_list', object: @events %>
    </section>
    <section>
      <h2>Attending events</h2>
      <section class="upcoming-events">
        <h3>Upcoming events</h3>
        <%= render 'shared/events_list', object: @upcoming_events %>
      </section>
      <section class="past-events">
        <h3>Past events</h3>
        <%= render 'shared/events_list', object: @past_events %>
      </section>
    </section>
  </section>  
</div>
